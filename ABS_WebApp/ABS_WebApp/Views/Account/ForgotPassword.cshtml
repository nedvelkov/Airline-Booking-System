@model ForgotPasswordViewModel

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

@{
    ViewData["Title"] = "Forgot password";
}

<div class="col-md-6 offset-md-3">
    <div class="card card-body bg-light">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold"></div>

            <div class="m-2">
                <div class="row mb-2">
                    <label asp-for=@Model.Email></label>
                    <input type="text" class="form-control" asp-for=@Model.Email />
                    <span asp-validation-for=@Model.Email class="text-danger font-weight-bold"></span>
                </div>
                <div class="row mb-2">
                    <button type="submit">Reset password</button>
                </div>
            </div>
        </form>
    </div>
</div>
