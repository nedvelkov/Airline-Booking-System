@model RegisterViewModel

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

@{
    ViewData["Title"] = "Register";
}

<div class="col-md-6 offset-md-3">
    <div class="card card-body bg-light">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold"></div>

            <div class="m-2">
                <div class="row mb-2">
                    <label asp-for=@Model.FirstName></label>
                    <input type="text" class="form-control" asp-for=@Model.FirstName />
                    <span asp-validation-for=@Model.FirstName class="text-danger font-weight-bold"></span>
                </div>
                <div class="row mb-2">
                    <label asp-for=@Model.LastName></label>
                    <input type="text" class="form-control" asp-for=@Model.LastName />
                    <span asp-validation-for=@Model.LastName class="text-danger font-weight-bold"></span>
                </div>
                <div class="row mb-2">
                    <label asp-for=@Model.Email></label>
                    <input type="text" class="form-control" asp-for=@Model.Email />
                    <span asp-validation-for=@Model.Email class="text-danger font-weight-bold"></span>
                </div>
                <div class="row mb-2">
                    <label asp-for=@Model.Password></label>
                    <input type="password" class="form-control" asp-for=@Model.Password />
                    <span asp-validation-for=@Model.Password class="text-danger font-weight-bold"></span>
                </div>
                <div class="row mb-2">
                    <label asp-for=@Model.ConfirmPassword></label>
                    <input type="password" class="form-control" asp-for=@Model.ConfirmPassword />
                    <span asp-validation-for=@Model.ConfirmPassword class="text-danger font-weight-bold"></span>
                </div>
                <div class="row mb-2">
                    <button type="submit">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>
