@model FindAvaibleFlightsViewModel

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

@{
    ViewData["Title"] = "Create flight section";
}

<div class="col-md-6 offset-md-3">
    <div class="card card-body bg-light">
        <form method="post">

            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Origin"></label>
                <input type="text" asp-for="Origin" class="form-control" />
                <span asp-validation-for="Origin" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                <label asp-for="Destination"></label>
                <input type="text" asp-for="Destination" class="form-control" />
                <span asp-validation-for="Destination" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                <button type="submit">Create flight section</button>

            </div>

        </form>
        @if(Model.Flights.Count>0)
            {
                <ul>
                    @foreach (var flight in Model.Flights)
                    {
                        <li>@flight</li>
                    }
                </ul>
            }
    </div>
</div>