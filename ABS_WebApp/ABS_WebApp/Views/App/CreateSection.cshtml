@model CreateSectionViewModel

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

@{
    ViewData["Title"] = "Create flight section";
}

<div class="col-md-6 offset-md-3">
    <div class="card card-body bg-light">
        <form method="post">

            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <p class="mb-0">
                    <i class="fas fa-passport d-inline"></i>
                    <label asp-for="Id"></label>
                </p>
                <select asp-for="Id" class="form-control">
                    <option></option>
                    @foreach (var flight in Model.Flights)
                    {
                        <option value="@flight">@flight</option>
                    }
                </select>
                <span asp-validation-for="Id" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                <p class="mb-0">
                    <i class="far fa-paper-plane"></i>
                    <label asp-for="AirlineName"></label>
                </p>
                <select asp-for="AirlineName" class="form-control">
                    <option></option>
                    @foreach (var airline in Model.Airlines)
                    {
                        <option value="@airline">@airline</option>
                    }
                </select>
                <span asp-validation-for="AirlineName" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rows"></label>
                <input type="number" asp-for="Rows" class="form-control" />
                <span asp-validation-for="Rows" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                <label asp-for="Columns"></label>
                <input type="number" asp-for="Columns" class="form-control" />
                <span asp-validation-for="Columns" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                <label asp-for="SeatClass"></label>
                <select asp-for="SeatClass" class="form-control">
                    <option></option>
                    <option value="1">First class</option>
                    <option value="2">Business class</option>
                    <option value="3">Economy class</option>
                </select>
                <span asp-validation-for="SeatClass" class="text-danger font-weight-bold"></span>
            </div>


            <div class="form-group">
                <button type="submit">Create flight section</button>
                <span class="text-success">@TempData["Success"]</span>
            </div>

        </form>
    </div>
</div>