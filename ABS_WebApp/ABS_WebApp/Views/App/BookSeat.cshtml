@model BookSeatViewModel

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

@{
    ViewData["Title"] = "Book seat";
}

<div class="col-md-6 offset-md-3">
    <div class="card card-body bg-light">
        <form method="post">

            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Id"></label>
                <input type="text" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                <label asp-for="AirlineName"></label>
                <input type="text" asp-for="AirlineName" class="form-control" />
                <span asp-validation-for="AirlineName" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                <label asp-for="Row"></label>
                <input type="number" asp-for="Row" class="form-control" />
                <span asp-validation-for="Row" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                <label asp-for="Column"></label>
                <input type="text" asp-for="Column" class="form-control" />
                <span asp-validation-for="Column" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                <label asp-for="SeatClass"></label>
                <select asp-for="SeatClass" class="form-control">
                    <option></option>
                    <option value="1">First class</option>
                    <option value="2">Business class</option>
                    <option value="3">Economy class</option>
                </select>
                <span asp-validation-for="SeatClass" class="text-danger font-weight-bold"></span>
            </div>


            <div class="form-group">
                <button type="submit">Book seat</button>
                <span class="text-success">@ViewBag.Success</span>
            </div>

        </form>
    </div>
</div>